@model List<TodoWebApp.Models.Tarea>

<h1>Gestor de Tareas</h1>

<form asp-action="Agregar" method="post">
    <input type="text" name="descripcion" placeholder="Nueva tarea..." required />
    <button type="submit">Agregar</button>
</form>

<ul>
@foreach (var tarea in Model)
{
    <li>
        @tarea.Descripcion
        @(tarea.Completada ? "(✔️)" : "")
        <form asp-action="MarcarComoCompletada" method="post" style="display:inline">
            <input type="hidden" name="id" value="@tarea.Id" />
            <button type="submit">✔️</button>
        </form>
        <form asp-action="Eliminar" method="post" style="display:inline">
            <input type="hidden" name="id" value="@tarea.Id" />
            <button type="submit">🗑️</button>
        </form>
    </li>
}
</ul>

